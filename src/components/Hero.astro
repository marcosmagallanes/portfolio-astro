---
import Spotify from "./Spotify.astro";
import { Icon } from "astro-icon";
import "@fontsource/lexend";
import "@fontsource/roboto";
import "@fontsource/roboto-mono";
---

<main
  class="flex flex-col sm:flex-row items-center justify-between mx-2.5 my-5 text-center border-2 border-slate-300 p-1.5 rounded-lg"
>
  <section class="grid items-center justify-center p-2 sm:w-2/5">
    <img
      class="border-2 rounded-full border-slate-300"
      src="/assets/avatar.png"
    />
    <ul
      class="relative flex justify-around p-2 mt-5 border-2 border-slate-300 bg-slate-500 rounded-xl"
    >
      <span
        class="select-none absolute top-0 inline-block px-1 -mt-2.5 leading-none bg-slate-500 left-3 text-sm"
        >skills</span
      >
      <Icon name="vscode-icons:file-type-reactjs" />
      <Icon name="vscode-icons:file-type-node" />
      <Icon name="vscode-icons:file-type-mongo" />
      <Icon name="vscode-icons:file-type-astro" />
    </ul>
    <Spotify />
  </section>
  <section class="flex flex-col items-center justify-center p-2 sm:w-3/5">
    <h1 class="text-5xl font-extrabold">Hello, I'm Marcos!</h1>
    <span class="text-sm"
      >Software Engineer - Open Source Advocate - Tech Wizard</span
    >
    <p class="px-2 my-3 text-base">
      I'm a Software Engineer, based in Salt Lake City, Utah. I'm building
      software that helps people. I love to learn and I'm always seeking to
      expand my stack.
    </p>
  </section>
</main>

<style>
  [astro-icon] {
    @apply h-8;
  }
  h1 {
    @apply text-stone-300;
    font-family: "Lexend", sans-serif;
  }
  span {
    @apply text-slate-200;
    font-family: "Roboto Mono", monospace;
  }
  p {
    @apply text-slate-200;
    font-family: "Lexend", sans-serif;
  }
</style>
